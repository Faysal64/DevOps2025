<VirtualHost *:80>
    ServerName {{ server_name }}
    DocumentRoot {{ web_root }}

    <Directory {{ web_root }}>
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/{{ site_name }}_error.log
    CustomLog ${APACHE_LOG_DIR}/{{ site_name }}_access.log combined
</VirtualHost>

